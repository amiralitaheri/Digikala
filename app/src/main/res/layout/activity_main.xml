<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="10dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/basketButton"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_basket"
                        android:tint="@color/white"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/searchButton"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_magnifier"
                        android:tint="@color/white"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingEnd="5dp">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/digikalaImage"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_digikala_white"
                        android:tint="@color/white"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/menuButton"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_menu"
                        android:tint="@color/white"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">
            <ss.com.bannerslider.Slider
                    android:id="@+id/banner_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <androidx.recyclerview.widget.RecyclerView
                    android:layoutDirection="rtl"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:id="@+id/chipRecycler"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/banner_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat android:layout_height="wrap_content"
                                                          android:layout_width="match_parent"
                                                          android:layout_marginTop="15dp"
                                                          android:id="@+id/specialOfferHeader"
                                                          app:layout_constraintTop_toBottomOf="@id/chipRecycler"
                                                          app:layout_constraintLeft_toLeftOf="parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:paddingTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingStart="15dp">

                    <TextView
                            android:id="@+id/hourCounter"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@color/digikalaDarkGrey"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="@string/colon"
                            android:textColor="#383838"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/minuteCounter"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@color/digikalaDarkGrey"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="@string/colon"
                            android:textColor="#383838"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/secondCounter"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@color/digikalaDarkGrey"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:paddingStart="100dp"
                            android:src="@drawable/typeface_specialoffer"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <fragment
                    app:layout_constraintTop_toBottomOf="@id/specialOfferHeader"
                    android:name="ir.saatgroup.digikala.ui.IncredibleProductsRowFragment"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/specialOfferFragmentView"/>

            <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/specialOfferFragmentView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/advBanner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:viewAspectRatio="3"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    app:layout_constraintTop_toBottomOf="@+id/advBanner1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/mobileBanner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:elevation="3dp"
                    android:background="@color/white"
                    app:roundedCornerRadius="1dp"
                    app:viewAspectRatio="3.1"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>

            <com.facebook.drawee.view.SimpleDraweeView
                    app:layout_constraintTop_toBottomOf="@+id/mobileBanner1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/mobileBanner2"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:viewAspectRatio="1.52"
                    app:roundedCornerRadius="1dp"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    app:layout_constraintTop_toBottomOf="@+id/mobileBanner1"
                    app:layout_constraintLeft_toRightOf="@id/mobileBanner2"
                    android:id="@+id/mobileBanner3"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:viewAspectRatio="1.52"
                    app:roundedCornerRadius="1dp"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    app:layout_constraintTop_toBottomOf="@+id/mobileBanner3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/mobileBanner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:viewAspectRatio="3.1"
                    app:roundedCornerRadius="1dp"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    app:layout_constraintTop_toBottomOf="@+id/mobileBanner4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/mobileBanner5"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    android:background="@color/white"
                    app:viewAspectRatio="1.52"
                    app:roundedCornerRadius="1dp"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    app:layout_constraintTop_toBottomOf="@+id/mobileBanner4"
                    app:layout_constraintLeft_toRightOf="@id/mobileBanner5"
                    android:id="@+id/mobileBanner6"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="3dp"
                    app:viewAspectRatio="1.52"
                    app:roundedCornerRadius="1dp"
                    android:background="@color/white"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>
            <com.facebook.drawee.view.SimpleDraweeView
                    app:layout_constraintTop_toBottomOf="@+id/mobileBanner6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/advBanner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:viewAspectRatio="3"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/alt_500px"
                    app:placeholderImageScaleType="centerInside"/>


            <fragment
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/advBanner2"
                    android:name="ir.saatgroup.digikala.ui.ProductRowFragment"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/topSellersFragmentView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>